{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noUnusedLocals": true,
    //"lib": ["dom", "es2016"],
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": [
    "./test/**/*.ts",
    "./src/custom.d.ts"
  ],
  "files": [
    "src/app.ts",
    "./src/external-types.d.ts"
  ],
  "references": [{
    "path": "../shared"
  }]
}
