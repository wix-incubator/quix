{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "typeRoots":  ["./node_modules/@types", "./src/types/3rd-party"],
    "paths": {
      "shared/*": ["../shared/*"],
      "shared": ["../shared"],
      "entities/*": ["./src/entities/*"],
      "entities": ["./src/entities"],
      "modules/*": ["./src/modules/*"],
      "config/*": ["./src/config/*"],
      "config": ["./src/config"],
      "global-types": ["./src/types"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "references": [{
    "path": "../shared"
  }],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
