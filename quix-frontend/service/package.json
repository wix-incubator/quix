{
  "name": "quix-node-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -b tsconfig.build.json && npm run update-statics",
    "start": "ts-node --files -r tsconfig-paths/register scripts/start.ts",
    "update-statics": "ts-node scripts/update-statics.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node index.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:mysql": "DB_TYPE=mysql jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run test:e2e:sqlite && npm run test:e2e:mysql",
    "test:e2e:sqlite": "jest --runInBand --config ./test/jest-e2e.js",
    "test:e2e:mysql": "DB_TYPE=mysql jest --runInBand --config ./test/jest-e2e.js"
  },
  "dependencies": {
    "@nest-middlewares/helmet": "^5.1.1",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/typeorm": "^6.0.0",
    "@types/node-fetch": "^2.5.0",
    "appmetrics-dash": "^4.1.0",
    "axios": "^0.19.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^7.0.0",
    "fp-ts": "^2.0.1",
    "google-auth-library": "^3.1.2",
    "http-proxy-middleware": "^0.19.1",
    "lodash": "^4.17.15",
    "mysql": "^2.16.0",
    "node-fetch": "^2.6.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "tapable": "^1.1.1",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.15",
    "uuid": "^3.3.2",
    "velocity": "^0.7.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/chance": "^1.0.4",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.0",
    "@types/http-proxy-middleware": "^0.19.2",
    "@types/jest": "^23.3.13",
    "@types/lodash": "^4.14.123",
    "@types/mysql": "^2.15.6",
    "@types/nock": "^9.3.1",
    "@types/node": "^10.12.18",
    "@types/passport-jwt": "^3.0.1",
    "@types/shelljs": "^0.8.3",
    "@types/supertest": "^2.0.7",
    "@types/tapable": "^1.0.4",
    "@types/uuid": "^3.4.4",
    "chance": "^1.0.18",
    "jest": "^24.8.0",
    "nock": "^10.0.6",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "shelljs": "^0.8.3",
    "sql.js": "^0.5.0",
    "supertest": "^3.4.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "target": "esnext"
        }
      }
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^shared/(.*)": "<rootDir>/../../shared/$1",
      "^shared": "<rootDir>/../../shared",
      "^entities/(.*)": "<rootDir>/entities/$1",
      "^entities": "<rootDir>/entities",
      "^modules/(.*)$": "<rootDir>/modules/$1",
      "^config/(.*)": "<rootDir>/config/$1",
      "^config": "<rootDir>/config",
      "^common/(.*)": "<rootDir>/common/$1",
      "^errors": "<rootDir>/errors",
      "^global-types": "<rootDir>/types",
      "^utils/(.*)": "<rootDir>/utils/$1"
    }
  }
}
